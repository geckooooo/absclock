package wells {	import flash.display.Sprite;	import flash.events.MouseEvent;		public class AbsoluteClock extends Sprite {		private var valu:Number;		var square:Sprite = new Sprite();		public function AbsoluteClock() {			square.graphics.beginFill(0xFF0000);			square.graphics.drawRect(0,0,100,100);			square.graphics.endFill();			square.addEventListener(MouseEvent.CLICK, reportClick);			square.x = square.y = 50;						addChild(square);			doIt();		}				public function doIt() {			valu = 42;			trace(valu);		}				function reportClick(event:MouseEvent):void {			trace("square clicked on.");		}	}}